{
  "extends": [
    "react-app",
    "react-app/jest",
    "eslint:recommended"
  ],
  "plugins": [
    "jsx-a11y",
    "html"
  ],
  "rules": {
    "jsx-a11y/alt-text": 2, //A - 1.1.1
    "jsx-a11y/anchor-has-content": 2, //A - 2.4.4 / 4.1.2
    "jsx-a11y/anchor-is-valid": 2,  //A - 2.1.1
    "jsx-a11y/aria-props": 2, //A - 4.1.2
    "jsx-a11y/aria-proptypes": 2, //A - 4.1.2
    "jsx-a11y/aria-role": 2,  //A - 4.1.2
    "jsx-a11y/aria-unsupported-elements": 2,  //A - 4.1.2
    "jsx-a11y/click-events-have-key-events": 2, //A - 2.1.1
    "jsx-a11y/html-has-lang": 2,  //A - 3.1.1
    "jsx-a11y/iframe-has-title": 2, //A - 2.4.1 / 4.1.2
    "jsx-a11y/interactive-supports-focus": 2, //A - 2.1.1
    "jsx-a11y/label-has-associated-control": 2, //A - 1.3.1 - 3.3.2 - 4.1.2
    "jsx-a11y/lang": 2, //A - 3.1.1
    "jsx-a11y/media-has-caption": 2,  //A - 1.2.2 /1.2.3
    "jsx-a11y/mouse-events-have-key-events": 2, //A - 2.1.1
    "jsx-a11y/no-access-key": 2,  //Recommended
    "jsx-a11y/no-autofocus": [ 2, { //Recommended
      "ignoreNonDOM": true
    }],
    "jsx-a11y/no-distracting-elements": [ 2, {  //A - 2.2.2
      "elements": [ "marquee", "blink" ]
    }],
    "jsx-a11y/no-interactive-element-to-noninteractive-role": 2,  //A - 4.1.2
    "jsx-a11y/no-noninteractive-element-interactions": 2, //A - 4.1.2
    "jsx-a11y/no-noninteractive-element-to-interactive-role": 2,  //A - 4.1.2
    "jsx-a11y/no-noninteractive-tabindex": 2, //A - 2.1.1
    "jsx-a11y/no-static-element-interactions": 2, //A - 4.1.2
    "jsx-a11y/role-has-required-aria-props": 2, //A - 4.1.2
    "jsx-a11y/role-supports-aria-props": 2, //A - 4.1.2
    "jsx-a11y/scope": 2,  //A - 1.3.1 / 4.1.1
    "jsx-a11y/tabindex-no-positive": 2, //A - 2.4.3
    "jsx-a11y/aria-activedescendant-has-tabindex": 2, //Recommended
    "jsx-a11y/img-redundant-alt": [ 2, {  //Recommended
      "components": [ "Image" ],
      "words": [ "Photo", "Image" ]
    }]
  }
}
